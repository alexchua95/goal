  <div class="row profile">
    <div class="row">
      <div class="col-lg-6">
        <img src="<%= user.image %>" class="profile-image">
        <h2><%= user.name %></h2>
      </div>
      <div class="col-lg-6">

      </div>
    </div>
    <table class="table table-striped">
      <tbody>
      <% user.skills.each do |skill|%>
          <tr>
            <td>
              <%= render 'users/skill.html.erb', skill: skill %>
            </td>
          </tr>
      <% end %>
      <tr>
        <td>
          <%= render 'users/new_skill.html.erb' %>
        </td>
      </tr>
      </tbody>
    </table>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12">
        <div id="map"></div>
        <% if user.location %>
            <%= hidden_field :user, :latitude, value: user.location.latitude %>
            <%= hidden_field :user, :longitude, value: user.location.longitude %>
        <% end %>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
        <h3>Availability</h3>
        <%= render 'shared/availability.html.erb', user: user %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12 hours">
      <% (user.hours + [Hour.new]).each do |hour| %>
          <%= render 'shared/hour_form.html.erb', hour: hour %>
      <% end %>
    </div>
  </div>